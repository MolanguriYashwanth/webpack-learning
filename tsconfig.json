{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "baseUrl": "."
    },
    "include": [
        "src/**/*", "webpack.prod.config.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}